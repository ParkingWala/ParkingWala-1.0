<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.LoginOtpActivity">
    <include layout="@layout/toolbar_layout"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/verify_otp_icon"
                />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_otp"
        android:textColor="@color/black"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="20dp"
        android:textSize="25sp"
        android:fontFamily="@font/baloo2medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/card_corner_input">
        <EditText
            android:id="@+id/otp_one"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:textSize="23sp"
            android:fontFamily="@font/baloo2semibold"
            android:gravity="center"
            android:maxLength="1"
            android:hint="_"
            android:textCursorDrawable="@null"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/card_corner_input">
        <EditText
            android:id="@+id/otp_two"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:textSize="23sp"
            android:fontFamily="@font/baloo2semibold"
            android:gravity="center"
            android:maxLength="1"
            android:hint="_"
            android:textCursorDrawable="@null"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/card_corner_input">
            <EditText
                android:id="@+id/otp_three"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:textSize="23sp"
                android:fontFamily="@font/baloo2semibold"
                android:gravity="center"
                android:hint="_"
                android:maxLength="1"
                android:textCursorDrawable="@null"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/card_corner_input">
            <EditText
                android:id="@+id/otp_four"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:textSize="23sp"
                android:fontFamily="@font/baloo2semibold"
                android:gravity="center"
                android:maxLength="1"
                android:hint="_"
                android:textCursorDrawable="@null"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded_corner"
            android:text="@string/verify_otp"
            android:fontFamily="@font/baloo2semibold"
            android:textColor="@color/white"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:textAlignment="center"
            android:textSize="23sp"
            android:padding="5dp"
            android:id="@+id/login_next_btn"/>
        <ProgressBar
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/my_primary_blue"
            android:layout_gravity="center"
            android:visibility="gone"
            android:id="@+id/login_progress_bar"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/resend_otp_in_30_sec"
        android:id="@+id/resend_otp_textview"/>

</LinearLayout>